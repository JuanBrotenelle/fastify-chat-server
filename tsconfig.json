{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "types": ["fastify-jwt", "@types/node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}